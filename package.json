{
  "name": "mcp-boost",
  "version": "0.0.1",
  "description": "MCP server that provides a magic integer to your coding agent",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "mcp-boost": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "check-exports": "attw --pack .",
    "prepublishOnly": "pnpm run typecheck && pnpm run build && pnpm run check-exports"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "claude",
    "effect"
  ],
  "author": "Fawwaz",
  "license": "MIT",
  "engines": {
    "node": ">=20.19.0"
  },
  "packageManager": "pnpm@10.8.1",
  "dependencies": {
    "@effect/cli": "^0.72.1",
    "@effect/platform": "^0.93.8",
    "@effect/platform-node": "^0.103.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "effect": "^3.19.12"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@types/node": "^25.0.3",
    "tsdown": "^0.18.0",
    "typescript": "^5.8.3"
  }
}
