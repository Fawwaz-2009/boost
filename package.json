{
  "name": "mcp-boost",
  "version": "0.0.2",
  "description": "MCP toolkit for AI-assisted development - capture browser/server logs from Vite apps",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "mcp-boost": "./dist/cli.mjs"
  },
  "files": [
    "dist",
    "schema.json"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./vite": {
      "import": {
        "types": "./dist/vite.d.mts",
        "default": "./dist/vite.mjs"
      },
      "require": {
        "types": "./dist/vite.d.cts",
        "default": "./dist/vite.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --noEmit",
    "check-exports": "attw --pack . --ignore-rules no-resolution",
    "prepublishOnly": "pnpm run typecheck && pnpm run build && pnpm run check-exports"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "claude",
    "effect"
  ],
  "author": "Fawwaz",
  "license": "MIT",
  "engines": {
    "node": ">=20.19.0"
  },
  "packageManager": "pnpm@10.8.1",
  "dependencies": {
    "@effect/cli": "^0.72.1",
    "@effect/platform": "^0.93.8",
    "@effect/platform-node": "^0.103.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "effect": "^3.19.12",
    "zod": "^4.2.1"
  },
  "peerDependencies": {
    "vite": ">=5.0.0 || >=6.0.0 || >=7.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.2",
    "@types/node": "^25.0.3",
    "tsdown": "^0.18.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.0"
  }
}
